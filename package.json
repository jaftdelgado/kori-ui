{
  "name": "kori-ui",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/core",
    "packages/utilities",
    "packages/components/*",
    "packages/kori-ui"
  ],
  "scripts": {
    "dev": "bun --filter \"*\" dev",
    "build": "bun --filter \"*\" build",
    "gen": "bun scripts/create-component.ts",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@tailwindcss/vite": "^4.0.0",
    "@types/bun": "latest",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.14.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "shiki": "^3.21.0",
    "svelte": "^5.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.2.6"
  }
}
